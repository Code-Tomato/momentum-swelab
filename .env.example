# Server Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# Server Port (defaults to 5000 if not set)
PORT=5000

# Allowed CORS Origins (comma-separated)
# Include your frontend URLs (GitHub Pages, localhost, etc.)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://Code-Tomato.github.io

# Python Version (for Render deployment)
PYTHON_VERSION=3.11.0

# Flask Environment
# Options: development, production
FLASK_ENV=production

# Flask Secret Key (for session management)
# Generate a secure random string for production
FLASK_SECRET_KEY=your_secret_key_here
